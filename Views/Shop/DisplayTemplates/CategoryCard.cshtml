@model ASP_SPR311.Data.Entities.Category

<div class="col">
    <a class="nav-link text-dark h-100" asp-controller="Shop" asp-action="Category" asp-route-id="@Model.Slug">
        <div class="card h-100">
            <img src="/Shop/Image/@(Model.ImageUrl)" alt="Image" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </a>
</div>